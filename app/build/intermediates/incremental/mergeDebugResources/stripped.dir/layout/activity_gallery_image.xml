<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_overlay"
    android:fitsSystemWindows="true">

    <com.theartofdev.edmodo.cropper.CropImageView

        android:id="@+id/cropImageView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:scaleType="fitXY"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center"
        android:orientation="vertical"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/btn_update_ttu_set_default"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"

            android:background="@xml/ovelshapegreen"
            android:layout_alignParentBottom = "true"
            android:text="@string/call_ttu_id_setProfile" />

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/nextRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_rotate_right_white_24dp"
        app:borderWidth="0dp"
        app:fabSize="mini"
        app:elevation="0sp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:backgroundTint="#7df1e7"
        android:tint="#ffffff"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/nextleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_rotate_left_white_24dp"
        app:borderWidth="0dp"
        app:fabSize="mini"
        app:elevation="0sp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:backgroundTint="#7df1e7"
        android:tint="#ffffff"/>
    <RelativeLayout
        android:id="@+id/wait_spinner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />

    </RelativeLayout>

</RelativeLayout>