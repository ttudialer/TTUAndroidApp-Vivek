<?xml version="1.0" encoding="utf-8"?>

                                                               

    
                 
                         
                                                                                  
           

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.fragment.login.SplashScreenFragment" android:tag="layout/splash_screen_fragment_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/tingtingu_logo" />

        <VideoView
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/tv_bottom_title"
            android:src="@drawable/otpsend_btn" />

        <TextView
            android:id="@+id/tv_bottom_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:textColor="@color/black"
            android:padding="10dp"
            android:textSize="18sp"/>

<!--        android:text="@string/splash_screen_bottom"-->

    </RelativeLayout>

         