<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.kabaladigital.tingtingu.ui.activity.LoginActivity" android:tag="layout/activity_login_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_login"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#FFFFFF">

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_toolbar_logo"
                android:layout_marginEnd="5dp"
                android:layout_gravity="end"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:background="@drawable/tingtingu_logo" />

        </androidx.appcompat.widget.Toolbar>


        <fragment
            android:id="@+id/section_login"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:navGraph="@navigation/nav_login" />

    </LinearLayout>

         