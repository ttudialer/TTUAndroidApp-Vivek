<?xml version="1.0" encoding="utf-8"?>

                                                               
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorScreenBackground"
        tools:context=".ui.fragment.recharge.MobileRechargeFragment" android:tag="layout/fragment_recharge_history_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <include
            android:id="@+id/layout_wb"
            layout="@layout/layout_wallet_balance"/>

        <LinearLayout
            android:id="@+id/layout_new_recharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:background="@drawable/ic_add_black_24dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/tv_new_recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/redeem_available_wallet_balance"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@color/colorLightGrey">

            <TextView
                android:id="@+id/tv_select_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_gravity="center"
                android:textAlignment="textEnd"
                android:textColor="@color/darkblue"
                android:layout_weight="0.8"
                android:textSize="18sp"
                tools:ignore="RtlCompat" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recent_recharge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
         