<?xml version="1.0" encoding="utf-8"?>

                                                   
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="@color/colorScreenBackground"
    tools:context=".ui.fragment.MemberShipFragment" android:tag="layout/member_ship_fragment_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_membership_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:text="@string/your_active_days_with_ttu" />

        <TextView
            android:id="@+id/tv_active_days"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_gravity="center_vertical"
            android:textColor="@color/darkblue"
            android:textSize="36sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_active_days_to_premium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text=""
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_basic_title"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:text="@string/basic_membership_details" />

    <TextView
        android:id="@+id/tv_basic_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text=""
        android:visibility="gone"/>


    <TextView
        android:id="@+id/tv_premium_title"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:text="@string/benefit_of_premium_membership" />

    <TextView
        android:id="@+id/tv_premium_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text=""
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_trial_title"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/darkblue"
        android:text="@string/message_for_trial_membership" />

    <TextView
        android:id="@+id/tv_trial_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text=""
        android:visibility="gone"/>

</LinearLayout>
         