<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <TextView
        android:textSize="14sp"
        android:textColor="#000"
        android:text="Ting Ting U Notification"
        android:id="@+id/tv_notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />

    <TextView
        android:textSize="13dp"
        android:textColor="#000"
        android:text="Ting Ting U Notification Ting Ting U Notification "
        android:id="@+id/tv_subtitle_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@id/tv_notification_title"
         />


    <ImageView
        android:id="@+id/image_bigimage_notification"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="4dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/tv_subtitle_notification"
        android:background="@drawable/tingtingu_logo"/>




</RelativeLayout>