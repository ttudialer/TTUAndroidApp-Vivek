<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorScreenBackground"
        tools:context="com.kabaladigital.tingtingu.ui.fragment.login.LoginFragment" android:tag="layout/login_fragment_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/tingtingu_logo" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_above="@id/layout_input_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_otp_statement"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:id="@+id/layout_input_fields"
            android:layout_above="@id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:maxLength="10"
                    android:hint="@string/login_mob"
                    android:backgroundTint="@color/darkblue"
                    android:foregroundTint="@color/darkblue"
                    android:textColor="@color/blue"
                    android:inputType="number|textNoSuggestions"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/darkblue">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_referral_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/darkblue"
                    android:transitionName="transitionNamerefferal"
                    android:foregroundTint="@color/black"
                    android:textColor="@color/blue"
                    android:hint="@string/loging_refercode"
                    android:textColorHint="@color/grey_800"
                    android:maxLength="8"
                    android:inputType="text|textNoSuggestions"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/my_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/login_privacypolicy"
                android:layout_marginTop="16dp"
                android:textColor="@color/black"
                android:textColorLink="#000"
                android:textColorHighlight="#fff"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_btn_otp"
            android:background="@drawable/background_btn_otp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
         