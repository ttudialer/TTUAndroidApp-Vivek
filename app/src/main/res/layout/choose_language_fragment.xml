<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorScreenBackground"
        tools:context="com.kabaladigital.tingtingu.ui.fragment.login.ChooseLanguageFragment">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/tingtingu_logo" />

        <TextView
            android:id="@+id/tv_choose_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_language"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:id="@+id/layout_language_spinner"
            android:layout_below="@id/tv_choose_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/linear_round"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:padding="5dp">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_choose_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:entries="@array/choose_language"
                android:gravity="center"

                android:textAlignment="center"
                android:padding="5dp"
                android:spinnerMode="dropdown"
                android:theme="@style/Spinner" />

        </LinearLayout>

        <ImageView
            android:layout_below="@id/layout_language_spinner"
            android:id="@+id/btn_next"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/otpsend_btn" />

    </RelativeLayout>
</layout>